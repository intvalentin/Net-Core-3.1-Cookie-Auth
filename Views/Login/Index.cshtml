@model app.Models.Users;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="height:15px;"></div>
<div class="container-sm  ">
    <div class="row">

        <div class="col-sm-12 col-lg-4 offset-lg-4 justify-content-center shadow-lg p-3 mb-5 bg-white rounded">

            <form asp-controller="Login">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Email" required>
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password" required>
                </div>
                <div class="pb-3">
                    <a asp-action="ResetPassword" asp-controller="Login">Reset Password</a>
                </div>

                <button type="submit" class="btn btn-primary" asp-action="Login">Login</button>
            </form>

        </div>

    </div>

</div>
